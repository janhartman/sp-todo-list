<!DOCTYPE html>
<html>
<% include head %>
<body>
<nav class="navbar">
  <ul>
    <li id="logoNav">
      <a href="/"><img src="/images/logo.png" alt="LOGO" height="45"></a>
    </li>
        <li>
      <a href="/tasks"><%= __("Task View") %></a>
    </li>
    <li id="logoutButtonNav">
      <a id="logoutButton"><%= __("Log out") %></a>
    </li>
  </ul>
</nav>

<% include modalLogout %>

<section class="sectionTasks">
  <div class="blackBorder">
    <p class="divHeader"><%= __("Users") %></p>
    <ul class="userList">
      <% users.forEach(function(user) { %>
      <li class="user">
        <table>
          <tr>
            <td>
              ID:
            </td>
            <td class="liUserID">
              <%= user.id %>
            </td>
          </tr>
          <tr>
            <td>
              <%= __("Name") %>:
            </td>
            <td>
              <%= user.name %>
            </td>
          </tr>
          <tr>
            <td>
              Email:
            </td>
            <td>
              <%= user.email %>
            </td>
          </tr>
          <tr>
            <td>
              Admin:
            </td>
            <td>
              <%= user.admin %>
            </td>
          </tr>
          <tr>
            <td>
              <button class="adminButton" onclick="showTasks(this)"><%= __("Show tasks") %></button>
            </td>
            <td>
              <% if (!user.admin) {%>
              <button class="adminButton" onclick="editUser(this)"><%= __("Promote to admin") %></button>
              <% }%>
            </td>
          </tr>
        </table>
        <% }) %>
    </ul>
  </div>

  <div class="categoryTasks blackBorder">
      <header class="divHeader" id="categoryTag"><%= __("Tasks") %></header>
      <ul class="userTaskList">

      </ul>
  </div>
</section>


<div class="hidden">Icons made by <a href="http://www.freepik.com" title="Freepik">Freepik</a> from <a
    href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a> is licensed by <a
    href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a>
</div>

</body>
</html>
